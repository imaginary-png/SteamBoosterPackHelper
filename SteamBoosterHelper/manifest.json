{

  "manifest_version": 2,
  "name": "SteamBoosterHelper",
  "version": "1.0",

  "description": "Quickly open and create all your booster backs.",
  
  "icons": {
    "48": "icons/icon.png"
	},
  "options_ui": {
	"page": "options.html",
	"browser_style": true
	},

  "content_scripts": [
    {
      "matches": ["*://*.steamcommunity.com/id/*/inventory/"],
      "js": ["OpenBoosters.js"]
    },
	{
      "matches": [
	  "*://*.steamcommunity.com/tradingcards/boostercreator", 
	  "*://*.steamcommunity.com/tradingcards/boostercreator/*"
	  ],
	  
      "js": ["MakeBoosters.js"]
    }
  ],
  
  "permissions": [
    "storage"
	],
	
	"browser_specific_settings": {
  "gecko": {
    "id": "SteamBoosterHelper@fakeemailthisisnotreal.com",
    "strict_min_version": "42.0"
  }  
  }

}
